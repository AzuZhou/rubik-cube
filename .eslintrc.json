{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base", 
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules": {
        "allowForLoopAfterthoughts": true,
        "prettier/prettier": "error"
    }
}
